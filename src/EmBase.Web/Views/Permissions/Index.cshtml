@model List<EmBase.Enities.Permissions>
@{
    ViewBag.Title = "Dostęp";
}

<h2>Dostęp</h2>

<section id="control">
  <p>
    <a href="/PermissionsEdit/Add" class="btn btn-default">
      Dodaj Dostępu
      <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    </a>
  </p>

</section>

<section id="data">
  <table class="table">
    <tr>
      <th>Nazwa dostępu</th>
      <th>Opis dostępu</th>
      <th></th>
      <th></th>
    </tr>
    @foreach (var modele in Model)
      {
      <tr>

        <td>
          @modele.Permission_Name
        </td>
        <td>
          @modele.Permission_Description
        </td>

        <td>
          <a href="/PermissionsEdit/Edit?symbol=@modele.Id_Permission" class="btn btn-default">
            Edycja  Dostępu
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          </a>
        </td>
      </tr>
    }
  </table>
</section>