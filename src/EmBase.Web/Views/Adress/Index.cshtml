@model List<EmBase.Enities.Citys>
@{
    ViewBag.Title = "Citys";
}

<h2>Miasta</h2>

<section id="control">
  <p>
    <a href="/AdressEdit/Add" class="btn btn-default">
      Dodaj Miasto
      <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
    </a>
  </p>

</section>

<section id="data">
  <table class="table">
    <tr>
      <th>Id Miasta</th>
      <th>Miasto</th>
      <th>Ulica</th>
      <th>Kod pocztowy</th>
      <th></th>
      <th></th>
    </tr>
    @foreach (var miasto in Model)
      {
      <tr>
        <td>
          @miasto.Id_City
        </td>
        <td>
          @miasto.City
        </td>
        <td class="center">
          @miasto.Street
        </td>
        <td class="center">
          @miasto.Postal_Code
        </td>
        <td>
          <a href="/AdressEdit/Edit?symbol=@miasto.Id_City" class="btn btn-default">
            Edycja Miasta
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          </a>
        </td>
      </tr>
    }
  </table>
</section>
